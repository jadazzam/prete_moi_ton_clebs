<div class="wrapper">
  <h2 id="dashboard_title" class="headers"> Status des clebards </h2>

  <% @reservations.each do |reservation| %>
    <div class="profile-card">
      <div class="blue-div">
      </div>
      <div class="row">
          <div class="col-xs-12 col-md-3">
            <%= cl_image_tag reservation.dog.photo, height: 500, width: 600, crop: :fill, id: "photo" %></div>
          <div class="col-xs-12 col-md-6">
            <h3 class="headers"><%= reservation.dog.name %></h3>
            <p class="headers">Âge : <%= reservation.dog.age %></p>
            <p class="headers">Description : <%= reservation.dog.description %></p>
            <p class="headers">De: <%= reservation.starts_at %></p>
            <p class="headers">À: <%= reservation.ends_at %></p>
          </div>
          <div class="col-xs-12 col-md-3" class="status-of-reservation">
            <% if reservation.confirmed == nil %>
              <p id="en-attente">En attente</p>
            <%= link_to "Annuler ma demande", dog_reservation_path(reservation.dog, reservation),
            method: :delete,
            data: { confirm: "Êtes-vous sûr de vouloir annuler la demande ?" },
            id: 'button-annulation' %>
            <% elsif reservation.confirmed == true %>
              <p id="valide">Validé</p>
            <% else %>
              <p id="refuse">Refusé</p>
            <% end %>
          </div>
      </div>
    </div>
  <% end %>
</div>

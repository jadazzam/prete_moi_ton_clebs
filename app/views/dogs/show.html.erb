<div class="wrapper">
    <%= cl_image_tag @dog.photo, height: 300, width: 400, crop: :fill, id: "photo" %>
    <div class="description">
      <h1><%= @dog.name %></h1>
      <p><%= @dog.age %></p>
      <p><%= @dog.address %></p>
      <p><%= @dog.breed %></p>
      <p><%= @dog.gender%></p>
      <p><%= @dog.description %></p>
      <%= simple_form_for [@dog, @reservation] do |f| %>
        <%= f.button :submit, "Envoyer ma demande", class: "btn btn-lg" %>
        <%= link_to "Retirer mon chien", dog_path,
      method: :delete,
      data: { confirm: "Are you sure?" },
      class: 'btn btn-warning' %>
         <!--   Supprimer une rÃ©servation  -->

      <% end %>
    </div>
</div>



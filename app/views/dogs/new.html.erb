<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h1>Add my dog</h1>

      <%= simple_form_for @dog do |f| %>
        <%= f.input :name %>
        <%= f.input :age %>
        <%= f.input :breed %>
        <%= f.input :gender %>
        <%= f.input :description %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.button :submit, class: 'btn btn-warning' %>
      <% end %>
    </div>
  </div>
</div>
